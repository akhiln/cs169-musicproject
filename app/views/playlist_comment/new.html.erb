<h1>New Comment on "<%=h @playlist.name %>"</h1>

<% form_for(@playlist_comment, :url => "/comment/playlist/create/#{@song.id.to_s}")  do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :Comment %><br />
    <%= f.text_field :text %>
  </p>
  
<p>
    <%= f.submit 'Post' %>
  </p>
<% end %>

<%= link_to 'Back', playlists_path %>
