<h1>New Comment on "<%=h @playlist.name %>"</h1>

<% form_remote_for(@playlist_comment, :url => "/comment/playlist/create/#{@playlist.id.to_s}", :update=>'main_content')  do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :Comment %><br />
    <%= f.text_field :text %>
  </p>
  
<p>
    <%= f.submit 'Post' %>
  </p>
<% end %>

<%= link_to_remote 'Back', :url=>playlists_path, :update=>'main_content' %>
