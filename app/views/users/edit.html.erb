<h1>Update Your Information</h1>

<% form_for @user, :url => '/Users/update/'+@user.id.to_s, :html => { :multipart => true }  do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

<p><%= f.label :bio , "Information about yourself"%><br/>
<%= f.text_area :bio %></p>

<p><label for="upload_file">Select a Profile Picture</label><br/> 
  <%= file_field 'upload', 'datafile' %></p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @user %>
