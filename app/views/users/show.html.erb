
<div class="profile" id="name_and_pic">
<img src="<%=@user.pic%>" style="width: 800px;"/>
<p id="name"><%= @user.name %></p><br>
</div>
<div class="profile" id="info">
<%= @user.bio %>
</div>
<div class="profile" id="songs">
<p class="section_title"><%="Songs by "+@user.name%></p>
<% if @user.id == @current_user.id %>
<p><%=link_to('Add a song','/Songs/new')%>
<%end%>

<% if not @songs.nil? %>
<ul class="music_list" id="song_list">
  <% @songs.each do |song| %>
    <li class="song_element"><%=link_to(song.name,'/songs/show/'+song.id.to_s)%> <%=song.makePlayer%></li>
  <% end %>
</ul>
<%end%>
</div>
<div class="profile" id="playlists">
<p class="section_title"><%="Playlists by "+@user.name%></p>
<% if @user.id == @current_user.id %>
<p><%=link_to('Make a new playlist','/Playlists/new')%></p>
<%end%>
<% if not @playlists.nil? %>
<ul class="music_list" id="pl_list">
  <% @playlists.each do |pl| %>
    <li class="pl_element"><%=link_to(pl.name,'/Playlists/show/'+pl.id.to_s)%> </li>
  <% end %>
</ul>
<%end%>

<div class="profile" id="bookmarks">
<p class="section_title"><%=@user.name+'\'s Bookmarks:' %></p>
<% if not @bookmarks.nil? %>
<ul class="music_list" id="bm_list">
  <% @bookmarks.each do |bk| %>
   <div class="bookmark_element">
    <li class="pl_element"><%=link_to(bk.playlist.name,'/Playlists/show/'+bk.playlist.id.to_s)%> </li> </div>
  <% end %>
</ul>
<%end%>
</div>
