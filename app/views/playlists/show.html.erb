<h2><%=@playlist.name%></h2>
<p><%=@playlist.description%></p>
<% if not @songs.nil? %>
<ul class="music_list" id="song_list">
  <% @songs.each do |song| %>
    <li class="song_element"><%=link_to(song.name,'/Songs/show/'+song.id.to_s)%> <%=song.makePlayer%></li>
  <% end %>
</ul>
<%end%>
<% if @playlist.user_id == @current_user.id %>
<a href="/playlists/delete/<%=@playlist.id%>">Delete</a> || 
<% end %>
<a href="/comment/playlist/new/<%=@playlist.id%>">Comment</a> || <a href="/rating/playlist/new/<%=@playlist.id%>">Rate</a> || <a href="/bookmark/create/<%=@playlist.id%>">Bookmark</a>
<h2>Rating:</h2>
<%= @playlist.rating %>
<h2>Comments</h2>
<% if not @comments.nil? %>
  <% @comments.each do |comment| %>
    <div class="comment">
    <li class="comment_element"><%=link_to(comment.user.name,'/users/show/'+comment.user.id.to_s)%>
                             <p><%=h comment.text %></p></li>
    </div>
  <% end %>
</ul>
<%end%>
