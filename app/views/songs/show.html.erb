<h2 class="songTitle"><%= @song.name %></h2>
<%= @song.makePlayer %>
<p class="songDescription"><%= @song.description %></p>
<% if @auth %>
<a href="/songs/delete/<%=@song.id%>">Delete</a> || <a href="/playlists/addsong/<%=@song.id%>">Add to Playlist</a> || <a href="/comment/song/new/<%=@song.id%>">Comment</a>
<% else %>
 <a href="playlist/addsong/<%=@song.id%>">Add to Playlist</a>
<% end %>
