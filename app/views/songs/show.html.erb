<%= javascript_tag "document.getElementById('facebook_title').setAttribute('content', '#{@song.name}'); document.getElementById('facebook_url').setAttribute('content', '#{request.url}')" %>

<h2 class="songTitle"><%= @song.name %></h2>
<%= @song.makePlayer %>
<p class="songInformation"><h2>Song Information</h2>
<p>Album: <%= @song.album %></p>
<p>Description: <%= @song.description %></p></p>
<% if @auth %>
<%=link_to_remote "Edit", {:url=>"/songs/edit/"+@song.id.to_s, :update=>'main_content'} %> ||
<%=link_to_remote "Delete", {:url=>"/songs/delete/"+@song.id.to_s, :update=>'main_content'} %> ||
<% end %>
<%=link_to_remote "Add to Playlist", {:url=>'/playlists/addsong/'+@song.id.to_s, :update=>'main_content'} %> || 
<%=link_to_remote "Comment", {:url=>"/comment/song/new/"+@song.id.to_s, :update=>'main_content'} %> || 
<%=link_to_remote "Rate", {:url=>"/rating/song/new/"+@song.id.to_s, :update=>'main_content'} %>
<p> URL: <%= @song.song.url %></p>
<h2>Rating:</h2>
<%= @song.ratingString %>

<%= content_tag :iframe, "", facebook_like(request.url) %>
<!-- <%= content_tag :iframe, "", facebook_box(request.url) %> -->

<h2>Comments</h2>
<% if not @comments.nil? %>
  <% @comments.each do |comment| %>
    <div class="comment">
    <li class="comment_element"><%=link_to_remote(comment.user.name,'/users/show/'+comment.user.id.to_s,:update=>'main_content')%>
                             <p><%=h comment.text %></p></li>
    </div>
  <% end %>
</ul>
<%end%>
