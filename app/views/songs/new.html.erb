<h1>New song</h1>

<% form_for :song, @song, :url => songs_path, :html => { :multipart => true } do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :album %><br />
    <%= f.text_field :album %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= f.text_field :genre %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  
  <p> <%= f.file_field :song %> </p>

<p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', account_path %>
