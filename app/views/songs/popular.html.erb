<h1> Popular Songs </h1>

<% for i in (0..[@songs.size-1,20].min) do %>
  <% content_tag :div, "", :id => "song_#{i}", :class => "song" do %>
    <%= content_tag :div, link_to_remote("#{@songs[i].name}", :controller=>:songs, :action=>:show, :id=>"#{@songs[i].id}", :update=>'main_content'), :class => "song_name" %>
    <%= content_tag :div, "#{@songs[i].genre}", :class => "song_genre" %>
    <%= content_tag :div, "#{@songs[i].rating}", :class => "song_rating" %>
    <%= content_tag :div, link_to_remote("#{@songs[i].users[0].login}", :controller=>:users, :action=>:show, :id=>"#{@songs[i].users[0].id}", :update=>'main_content'), :class => "song_user" %>
  <% end %>
<% end %>
